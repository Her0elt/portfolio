---
import Footer from '@components/Footer.astro';
import Navbar from '@components/Navbar.astro';
import { ViewTransitions } from 'astro:transitions';
import { SEO } from 'astro-seo';
---

<!DOCTYPE html>
<html lang="en" class="scroll-smooth" data-testid="html">
	<head>
		<SEO
			title="Hermann Elton portfolio website"
			description="Hermann Owren Elton's portfolio website that showscases information about projects technical skills and more"
		/>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<meta http-equiv="X-UA-Compatible" content="IE=edge" />
		<meta name="generator" content={Astro.generator} />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<title>Hermann Elton portfolio website</title>
		<!-- <ViewTransitions /> -->
	</head>
	<body
		class="text-white mx-auto max-w-screen-xl bg-primary px-5 font-sans xs:text-[16px] md:text-[18px]"
	>
		<Navbar />
		<slot />
		<Footer />
		<style is:global>
			/* Improve Page speed */
			/* https://css-tricks.com/almanac/properties/c/content-visibility/ */
			img {
				content-visibility: auto;
			}
		</style>
		<script
			data-project="portfolio-site"
			data-team="portfolio"
			defer
			src="https://stats.olafros.com/script.js"
		></script>
	</body>
</html>
