---
import { Astronav, MenuIcon, MenuItems } from 'astro-navbar';

const menuitems = [
	{
		title: 'Home',
		path: '/',
	},
	{
		title: 'About',
		path: '/about',
	},
	{
		title: 'Projects',
		path: '/projects',
	},
	{
		title: 'Experiences',
		path: '/experiences',
	},
	{
		title: 'Technical skills',
		path: '/skills',
	},
	{
		title: 'Resume',
		path: '/resume',
	},
];
---

<header data-testId="header" class="my-5 flex flex-col items-center justify-center lg:flex-row">
	<Astronav closeOnClick>
		<div class="flex w-full items-center justify-between lg:w-auto">
			<div class="block lg:hidden">
				<MenuIcon class="h-6 w-6 text-secondary" />
			</div>
		</div>
		<MenuItems class="mt-2 hidden w-full lg:mt-0 lg:flex lg:w-auto">
			<ul class="flex flex-col lg:flex-row lg:gap-3">
				{
					menuitems.map((item) => (
						<>
							<li>
								<a
									aria-label="navigation link"
									href={item.path}
									class="flex py-2 text-lg text-secondary hover:text-tertiary lg:px-3 lg:text-2xl"
								>
									{item.title}
								</a>
							</li>
						</>
					))
				}
			</ul>
		</MenuItems>
	</Astronav>
</header>
